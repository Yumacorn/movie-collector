<h1> Now editing</h1>
<p>
  Movie Title: <%=@movie.title%>
  Genre: <%=@movie.genre%>
  Release Year: <%=@movie.release_year%>
</p>

<form action="/movies/<%= @movie.id %>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <label for="title">Title:</label>
    <input type="text" name="title" value="<%=@movie.title%>">
    <br>
    <label for="email">Genre:</label>
    <input type="text" name="genre" value="<%=@movie.genre%>">
    <br>
    <label for="release_year">Release Year:</label>
    <input type="integer" name="release_year" value="<%=@movie.release_year%>">
    <input type="submit" value="Submit">
</form>


<br>
<p>To remove this Movie from your database</p>
<form action="/movies/<%= @movie.id %>/delete" method="post">
  <input id="hidden" type="hidden" name="_method" value="delete">
  <input type="submit" value="Delete Movie">
</form>
