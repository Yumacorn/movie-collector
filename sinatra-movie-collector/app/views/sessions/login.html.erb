<h1>Login</h1>

<p>Welcome to Movie Collector! Please enter your login information below </p>
<%= "Must include email and password. Please try again" if @user && @user.errors.any? %>

<form action="/sessions" method="POST">
  <p>
    <label for="email">Email:</label>
    <input type="text" name="email" id="email"/>
  </p>
  <p>
    <label for="password">Password:</label>
    <input type="password" name="password" id="password"/>
  </p>

  <input type="submit" />
</form>
